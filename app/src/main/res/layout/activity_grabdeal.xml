<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Grabdeal">

    <Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        android:title="Company name"
        android:titleTextColor="#4A4A4A" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar">

        <RelativeLayout
            android:layout_width="match_parent"

            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@drawable/gradient"></ImageView>

            <View
                android:id="@+id/cname"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:layout_below="@+id/toolbar"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:background="@drawable/btn_background1"
                android:elevation="2dp" />

            <ImageView
                android:id="@+id/clogo"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:layout_alignTop="@+id/cname"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:elevation="2dp"
                android:src="@drawable/gicon" />

            <TextView
                android:id="@+id/discount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/cname"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:text="Flat 50% discount"
                android:textColor="@android:color/black"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/cashback"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/discount"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:text="Flat 50% discount"
                android:textSize="20dp" />

            <Button
                android:id="@+id/grabdeal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/cashback"
                android:layout_margin="20dp"
                android:background="@drawable/btn_background2"
                android:text="Grab Deal"
                android:textColor="@android:color/white" />

            <RelativeLayout
                android:id="@+id/aboutframe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/grabdeal">

                <TextView
                    android:id="@+id/abouttxt"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"

                    android:background="@android:color/white"
                    android:gravity="bottom"
                    android:paddingLeft="20dp"
                    android:paddingBottom="5dp"
                    android:text="About Retailer"
                    android:textColor="@android:color/black"
                    android:textSize="20dp" />

                <View
                    android:id="@+id/arrowb"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignTop="@+id/abouttxt"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/arrowdown" />

                <TextView
                    android:id="@+id/about"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/abouttxt"
                    android:background="@android:color/white"
                    android:padding="20dp"
                    android:visibility="gone"
                    android:text="Adidas AG is a multinational corporation, founded and headquartered in Herzogenaurach, Germany, that designs and manufactures shoes, clothing and accessories. It is the largest sportswear manufacturer in Europe, and the second largest in the world, after Nike." />

            </RelativeLayout>

            <Button
                android:id="@+id/seemore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/aboutframe"
                android:layout_margin="20dp"
                android:background="@drawable/btnbg"
                android:text="See more Offers"
                android:textColor="@android:color/holo_orange_dark" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/linear"
                android:visibility="gone"
                android:layout_below="@+id/seemore">

                <LinearLayout
                    android:id="@+id/l1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"

                    android:background="@android:color/white"
                    android:orientation="vertical">

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:background="@android:color/white"
                        android:text="Expires in 2 days"

                        />

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:background="@android:color/white"
                        android:text="Addidas 60% off shoewear ..."
                        android:textColor="@android:color/black"

                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:text="See Details"
                        android:textColor="@android:color/holo_blue_dark" />

                    <Button
                        android:layout_width="150dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/btn_background2"
                        android:text="Grab Deal" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/l2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/l1"
                    android:layout_marginTop="20dp"

                    android:background="@android:color/white"
                    android:orientation="vertical">

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:background="@android:color/white"
                        android:text="Expires in 2 days"

                        />

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:background="@android:color/white"
                        android:text="Addidas 60% off shoewear ..."
                        android:textColor="@android:color/black"

                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:text="See Details"
                        android:textColor="@android:color/holo_blue_dark" />

                    <Button
                        android:layout_width="150dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/btn_background2"
                        android:text="Grab Deal" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>


    </ScrollView>

</RelativeLayout>